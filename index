    <script>
        document.addEventListener('DOMContentLoaded', function () {
            
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            mobileMenuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });
            
            const navLinks = document.querySelectorAll('.nav-link');
            const sections = document.querySelectorAll('section');
            const headerHeight = document.getElementById('header').offsetHeight;

            const observerOptions = {
                root: null,
                rootMargin: `-${headerHeight}px 0px 0px 0px`,
                threshold: 0.4
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        navLinks.forEach(link => {
                            link.classList.remove('active');
                            if (link.getAttribute('href').substring(1) === entry.target.id) {
                                link.classList.add('active');
                            }
                        });
                    }
                });
            }, observerOptions);

            sections.forEach(section => {
                observer.observe(section);
            });
            
            navLinks.forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    const targetId = link.getAttribute('href');
                    const targetElement = document.querySelector(targetId);
                    if (targetElement) {
                        const elementPosition = targetElement.getBoundingClientRect().top;
                        const offsetPosition = elementPosition + window.pageYOffset - headerHeight;
                        
                        window.scrollTo({
                            top: offsetPosition,
                            behavior: 'smooth'
                        });

                        if(mobileMenu.classList.contains('hidden') === false){
                            mobileMenu.classList.add('hidden');
                        }
                    }
                });
            });

            const industryData = [
                {
                    title: "Financial Services",
                    content: "Firms face legal action for inadequate cybersecurity controls. High risk of CEO/CFO fraud via urgent transaction requests, with AI voice cloning emerging as a new threat vector."
                },
                {
                    title: "Healthcare",
                    content: "Australia's most targeted non-government sector for ransomware and phishing. Human error is a leading cause of data breaches, compounded by legacy systems and high penalties for non-compliance."
                },
                {
                    title: "Manufacturing",
                    content: "Exposed to threats targeting Industrial Control Systems (ICS). Vulnerabilities often stem from outdated operational technology (OT) and third-party supply chain risks, including deepfake scams."
                },
                {
                    title: "Retail",
                    content: "Growing threats via IT systems and email. Social engineering has led to widespread operational disruption and customer data theft. The rise of eCommerce has expanded the attack surface."
                },
                {
                    title: "Professional Services",
                    content: "Highly vulnerable to phishing, impersonation, and Business Email Compromise (BEC). These attacks risk data breaches, IP theft, reputational damage, and significant financial loss."
                }
            ];

            const accordionContainer = document.getElementById('accordion-container');
            industryData.forEach((item, index) => {
                const accordionItem = document.createElement('div');
                accordionItem.className = 'border border-gray-200 rounded-lg';
                accordionItem.innerHTML = `
                    <button class="accordion-header w-full flex justify-between items-center p-4 text-left font-semibold text-gray-700 hover:bg-gray-50 focus:outline-none">
                        <span>${item.title}</span>
                        <svg class="w-5 h-5 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                    </button>
                    <div class="accordion-content bg-gray-50">
                        <p class="p-4 text-gray-600">${item.content}</p>
                    </div>
                `;
                accordionContainer.appendChild(accordionItem);
            });

            document.querySelectorAll('.accordion-header').forEach(button => {
                button.addEventListener('click', () => {
                    const content = button.nextElementSibling;
                    const icon = button.querySelector('svg');

                    if (content.style.maxHeight) {
                        content.style.maxHeight = null;
                        icon.style.transform = 'rotate(0deg)';
                    } else {
                        document.querySelectorAll('.accordion-content').forEach(c => c.style.maxHeight = null);
                        document.querySelectorAll('.accordion-header svg').forEach(i => i.style.transform = 'rotate(0deg)');
                        content.style.maxHeight = content.scrollHeight + "px";
                        icon.style.transform = 'rotate(180deg)';
                    }
                });
            });

            const campaignData = {
                'Content Strategy': {
                    icon: 'üìù',
                    content: `
                        <h4 class="text-xl font-bold text-gray-800 mb-4">Educate First, Sell Second</h4>
                        <p class="text-gray-600 mb-6">The content strategy focuses on providing value and building trust. We will audit and repurpose existing assets using AI tools to maximize reach and minimize cost. New content will be created to fill specific gaps, such as industry-specific threat reports and compelling case studies.</p>
                        <ul class="space-y-3 text-gray-600">
                            <li class="flex items-start"><span class="bg-cyan-100 text-cyan-800 text-xs font-semibold mr-3 px-2.5 py-0.5 rounded-full mt-1">Key Tactic</span>Repurpose existing webinars into short video clips, blog posts, and email snippets.</li>
                            <li class="flex items-start"><span class="bg-cyan-100 text-cyan-800 text-xs font-semibold mr-3 px-2.5 py-0.5 rounded-full mt-1">Key Tactic</span>Develop targeted case studies showing tangible results for similar companies.</li>
                            <li class="flex items-start"><span class="bg-cyan-100 text-cyan-800 text-xs font-semibold mr-3 px-2.5 py-0.5 rounded-full mt-1">Key Tactic</span>Gate high-value content (whitepapers, full webinars) to capture leads.</li>
                        </ul>`
                },
                'Social & Paid': {
                    icon: 'üì¢',
                    content: `
                        <h4 class="text-xl font-bold text-gray-800 mb-4">Targeted LinkedIn Engagement</h4>
                        <p class="text-gray-600 mb-6">LinkedIn will be our primary channel for both organic and paid promotion. The focus is on precision targeting to ensure every dollar of the ad spend reaches key decision-makers within the 200 target accounts.</p>
                        <ul class="space-y-3 text-gray-600">
                            <li class="flex items-start"><span class="bg-cyan-100 text-cyan-800 text-xs font-semibold mr-3 px-2.5 py-0.5 rounded-full mt-1">Key Tactic</span>Use LinkedIn Sales Navigator for hyper-targeted InMail outreach by the sales team.</li>
                            <li class="flex items-start"><span class="bg-cyan-100 text-cyan-800 text-xs font-semibold mr-3 px-2.5 py-0.5 rounded-full mt-1">Key Tactic</span>Run focused LinkedIn Ad campaigns exclusively targeting the 200 accounts and specific job titles (CISOs, IT Directors).</li>
                            <li class="flex items-start"><span class="bg-cyan-100 text-cyan-800 text-xs font-semibold mr-3 px-2.5 py-0.5 rounded-full mt-1">Key Tactic</span>Encourage employee advocacy to amplify reach and build trust through personal profiles.</li>
                        </ul>`
                },
                'Webinar': {
                    icon: 'üíª',
                    content: `
                        <h4 class="text-xl font-bold text-gray-800 mb-4">High-Impact Virtual Events</h4>
                        <p class="text-gray-600 mb-6">We will host 1-2 high-value webinars focused on education, not sales pitches. These events are a cost-effective way to generate high-quality leads and serve as a cornerstone for content repurposing.</p>
                        <ul class="space-y-3 text-gray-600">
                            <li class="flex items-start"><span class="bg-cyan-100 text-cyan-800 text-xs font-semibold mr-3 px-2.5 py-0.5 rounded-full mt-1">Key Tactic</span>Host an educational webinar with an industry expert or ethical hacker.</li>
                            <li class="flex items-start"><span class="bg-cyan-100 text-cyan-800 text-xs font-semibold mr-3 px-2.5 py-0.5 rounded-full mt-1">Key Tactic</span>Incorporate interactive elements like live Q&A and polls to boost engagement.</li>
                            <li class="flex items-start"><span class="bg-cyan-100 text-cyan-800 text-xs font-semibold mr-3 px-2.5 py-0.5 rounded-full mt-1">Key Tactic</span>Record and repurpose the full webinar into multiple smaller content assets.</li>
                        </ul>`
                },
                'Ethical Simulation': {
                    icon: 'üõ°Ô∏è',
                    content: `
                        <h4 class="text-xl font-bold text-gray-800 mb-4">The Unseen Threat: A Salesforce Security Challenge</h4>
                        <p class="text-gray-600 mb-6">The creative core of the campaign is an ethical simulation that demonstrates social engineering risks in a controlled, educational environment. This "show, don't tell" approach is designed to be memorable and create urgency.</p>
                        <div class="relative pl-8">
                            <div class="timeline-path"></div>
                            <div class="timeline-item relative mb-8">
                                <h5 class="font-bold text-lg text-gray-700">Phase 1: Awareness & Intrigue</h5>
                                <p class="text-gray-600 text-sm">Disseminate video teasers of simulated attacks via LinkedIn and email to the 200 accounts, posing the question: "Could this happen to you?"</p>
                            </div>
                            <div class="timeline-item relative mb-8">
                                <h5 class="font-bold text-lg text-gray-700">Phase 2: Ethical Simulation & Education</h5>
                                <p class="text-gray-600 text-sm">Host a live webinar demonstrating a simulated attack on a Salesforce environment, followed immediately by showcasing how Salesforce security features would prevent or detect it.</p>
                            </div>
                            <div class="timeline-item relative">
                                <h5 class="font-bold text-lg text-gray-700">Phase 3: Follow-up & Nurture</h5>
                                <p class="text-gray-600 text-sm">Sales team follows up with attendees, offering a personalized "Salesforce Security Posture Review" and sharing a detailed defense checklist.</p>
                            </div>
                        </div>`
                }
            };

            const campaignTabs = document.getElementById('campaign-tabs');
            const campaignContent = document.getElementById('campaign-content');

            Object.keys(campaignData).forEach((tabName, index) => {
                const button = document.createElement('button');
                button.className = `tab-button text-sm font-medium text-center px-4 py-3 border-b-2 border-transparent rounded-t-lg hover:text-gray-600 hover:border-gray-300 focus:outline-none`;
                button.innerHTML = `<span class="mr-2">${campaignData[tabName].icon}</span>${tabName}`;
                button.dataset.target = tabName;

                if (index === 0) {
                    button.classList.add('active');
                    campaignContent.innerHTML = campaignData[tabName].content;
                }

                campaignTabs.appendChild(button);
            });

            campaignTabs.addEventListener('click', (e) => {
                const targetButton = e.target.closest('.tab-button');
                if (!targetButton) return;

                document.querySelectorAll('.tab-button').forEach(btn => btn.classList.remove('active'));
                targetButton.classList.add('active');

                const targetContent = targetButton.dataset.target;
                campaignContent.innerHTML = campaignData[targetContent].content;
            });

            const budgetData = {
                labels: ['Paid Social (LinkedIn)', 'Content Creation', 'ABM & Sales Tools', 'Webinar & Events', 'Email Marketing', 'Contingency'],
                datasets: [{
                    label: 'Budget Allocation',
                    data: [6000, 3500, 1500, 1800, 500, 5000],
                    backgroundColor: [
                        '#06b6d4', // cyan-500
                        '#67e8f9', // cyan-300
                        '#22d3ee', // cyan-400
                        '#a5f3fc', // cyan-200
                        '#cffafe', // cyan-100
                        '#6b7280'  // gray-500
                    ],
                    borderColor: '#f8f7f4',
                    borderWidth: 4,
                    hoverOffset: 8
                }]
            };

            const budgetCtx = document.getElementById('budgetChart').getContext('2d');
            new Chart(budgetCtx, {
                type: 'doughnut',
                data: budgetData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 20,
                                font: {
                                    size: 12
                                }
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed !== null) {
                                        label += new Intl.NumberFormat('en-AU', { style: 'currency', currency: 'AUD' }).format(context.parsed);
                                    }
                                    return label;
                                }
                            }
                        }
                    },
                    cutout: '60%'
                }
            });

            const kpiData = [
                { category: 'Awareness', kpi: 'LinkedIn Engagement Rate', goal: 'Increase by 25%' },
                { category: 'Awareness', kpi: 'Webinar Attendance Rate', goal: '> 40% of registrants' },
                { category: 'Lead Gen', kpi: 'Marketing Qualified Leads (MQLs)', goal: '50 from target list' },
                { category: 'Lead Gen', kpi: 'Sales Qualified Leads (SQLs)', goal: '15 from MQLs' },
                { category: 'Pipeline', kpi: 'Pipeline Value Influenced', goal: '$250,000' },
                { category: 'Efficiency', kpi: 'Cost Per MQL', goal: '< $400' }
            ];

            const kpiTableBody = document.getElementById('kpi-table-body');
            kpiData.forEach(item => {
                const row = document.createElement('tr');
                row.className = 'hover:bg-gray-50';
                row.innerHTML = `
                    <td class="p-3"><span class="bg-gray-100 text-gray-800 text-xs font-medium px-2.5 py-0.5 rounded-full">${item.category}</span></td>
                    <td class="p-3 font-medium text-gray-900">${item.kpi}</td>
                    <td class="p-3 text-gray-600">${item.goal}</td>
                `;
                kpiTableBody.appendChild(row);
            });
        });
    </script>
</body>
</html>

